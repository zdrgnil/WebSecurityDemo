doctype html
html
  title Login - Bank 309
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='http://www.w3schools.com/lib/w3.css')
  body
    br
    center
      .w3-card-4(style='width:500px')
        .w3-container.w3-blue
          h2 Login
        form.w3-container(method='post')
          span#msg(style='color: red') #{message}
          p
            input#username.w3-input(name='username', type='text', placeholder='Username' value='#{username}')
          p
            input#password.w3-input(name='password', type='Password', placeholder='Password')
          p
            button.w3-btn.w3-blue(style='float:right') Login
            br
            br
